    body
        nav.navbar.bg-primary.navbar-dark.fixed-top.navbar-expand-lg
            a.navbar-brand(href='/') PSCORD
            .collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a(href='/servers').nav-link.text-white 대시보드
                ul.navbar-nav.ml-auto
                    li.nav-item
                        if user
                            a.nav-link.text-white #{user.username}
                    li.nav-item
                        if user
                            a(href='/auth/logout').nav-link.text-white 로그아웃
                        else
                            a(href='/auth/login').nav-link.text-white 로그인
        .container(style="padding-top: 70px;")
            block content
